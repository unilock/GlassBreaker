{
  "schema_version": 1,
  "mixin": [
    "glassbreaker-common.mixins.json"
  ],
  "quilt_loader": {
    "group": "${group}",
    "id": "glassbreaker",
    "version": "${version}",
    "metadata": {
      "name": "${name}",
      "description": "${description}",
      "contributors": {
        "${author}": "made the thing"
      },
      "contact": {
        "sources": "${sources}"
      },
      "license": "MIT",
      "icon": "icon.png"
    },
    "intermediate_mappings": "net.fabricmc:intermediary",
    "environment": "*",
    "entrypoints": {
      "init": [
        "net.unilock.glassbreaker.quilt.GlassBreakerQuilt"
      ]
    },
    "depends": [
      {
        "id": "quilt_loader",
        "version": "*"
      },
      {
        "id": "minecraft",
        "version": ">=1.18.2"
      }
    ]
  }
}
