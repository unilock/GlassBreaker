{
  "schema_version": 1,
  "mixin": [
    "glassbreaker-common.mixins.json"
  ],
  "quilt_loader": {
    "group": "${group}",
    "id": "glassbreaker",
    "version": "${version}",
    "name": "${name}",
    "description": "${description}",
    "authors": ["${author}"],
    "contact": {
      "sources": "${sources}"
    },
    "license": "MIT",
    "icon": "assets/glassbreaker/icon.png",
    "intermediate_mappings": "net.fabricmc:intermediary",
    "environment": "*",
    "entrypoints": {
      "init": [
        "net.unilock.glassbreaker.quilt.GlassBreakerQuilt"
      ]
    },
    "depends": [
      {
        "id": "quilt_loader",
        "version": "*"
      },
      {
        "id": "quilt_base",
        "version": "*"
      },
      {
        "id": "minecraft",
        "version": ">=1.18.2"
      }
    ]
  }
}
